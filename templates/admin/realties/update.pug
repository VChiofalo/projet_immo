extends ../layout 
block append content
    section(class="container") 
        h2 Edition du bien
        if error 
            .alert.alert-danger #{error}
        form(action="/admin75/realty/update/"+id, method="post") 
            h3 Adresse du bien
            .flex.column
                label(for="address1") Adresse 
                input(type="text", name="realty[address1]" placeholder="Adresse" value=realty.address_1 id="address1")
                input(type="text", name="realty[address2]" placeholder="suite adresse (facultatif)" value=realty.address_2 id="address2")
            .flex.column 
                label(for="city") Ville 
                input(type="text", name="realty[city]" placeholder="Ville" value=realty.city id="city")
            .flex.column 
                label(for="zipcode") Code postal
                input(type="text", name="realty[zipcode]" placeholder="code postal" value=realty.zipcode id="zipcode")
            .flex.column 
                label(for="infoAddress") Informations complémentaires 
                textarea(id="infoAddress", name="realty[infoAddress]", cols="30", rows="10", placeholder="Distances des tranports en commun, commerces de proximités, etc..", value=realty.info_address) 
            
            h3 Informations du bien 
            .flex.column 
                label(for="type") Type de bien 
                select(name="realty[type]" id="type") 
                    option(value="") Selectionnez un type de bien
                    option(value="1" selected=realty.type==1) Maison 
                    option(value="2" selected=realty.type==2) Appartement 
            .flex.column
                label(for="price") Prix net vendeur
                input(type="text", name="realty[price]" placeholder="Prix net vendeur" value=realty.price id="price")
            .flex.column 
                label(for="area") Surface (m²)
                input(type="text", name="realty[area]" placeholder="Surface en m²" value=realty.area id="area")
            .flex.column 
                label(for="room") Pièces
                input(type="text", name="realty[room]" placeholder="Nombre de pièces" value=realty.room id="room")
            .flex.column 
                label(for="sold") En vente 
                select(name="realty[sold]" id="sold") 
                    option(value="") Le bien est-il en vente ?
                    option(value="true" selected=realty.sold=="true") Oui 
                    option(value="false" selected=realty.sold=="false") Non 
            .flex.column 
                label(for="online") En ligne
                select(name="realty[online]" id="online") 
                    option(value="") Le bien est-il en ligne ?
                    option(value="true" selected=realty.online=="true") Oui 
                    option(value="false" selected=realty.online=="false") Non
            //.flex.columm 
                input(type="file" accept="image/png, image/jpeg") 

            h3 Contact du bien 
            .flex.column 
                label(for="civility") 
                select(name="contact[civility]" id="civility") 
                    option(value="") Veillez choisir une option
                    option(value="1" selected=contact.civility==1) Monsieur
                    option(value="2" selected=contact.civility==2) Madame
            .flex.column 
                label(for="contactFirstName") Prénom 
                input(type="text", name="contact[contactFirstName]" placeholder="contactFirstName" value=contact.first_name id="contactFirstName")
            .flex.column 
                label(for="contactLastName") Nom 
                input(type="text", name="contact[contactLastName]" placeholder="contactLastName" value=contact.last_name id="contactLastName")
            .flex.column 
                label(for="contactEmail") Email
                input(type="text", name="contact[contactEmail]" placeholder="contactEmail" value=contact.email id="contactEmail")
            .flex.column 
                label(for="contactPhoneNumber") Téléphone
                input(type="text", name="contact[contactPhoneNumber]" placeholder="contactPhoneNumber" value=contact.phone_number id="contactPhoneNumber")
            .flex.column 
                label(for="contactMobileNumber") Mobile
                input(type="text", name="contact[contactMobileNumber]" placeholder="contactMobileNumber" value=contact.mobile_number id="contactMobileNumber")
            .flex.column 
                label(for="contactInfo") Informations complémentaires 
                textarea(id="contactInfo", name="contact[contactInfo]", cols="30", rows="10", placeholder="Disponibilité, etc..", value=contact.info_contact) 
            .flex.column
                button(type="submit") Editer