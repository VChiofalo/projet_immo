doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Admin ImmoNeuf

        block stylesheet
        link(rel="stylesheet", href="assets/css/normalize.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css' crossorigin='anonymous')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        link(rel="stylesheet", href="/assets/css/admin.css")
    body 
        block header 
            header
                nav(class="flex spaceAround") 
                    div(class="flex center")
                        a(href="/") 
                            div(class="flex spaceBetween") 
                                i.fa-solid.fa-left-long
                                p Retour au site
                    div(class="flex center")
                        a(href="/" id="logo") 
                            img(src="/assets/img/logo.png", alt="logo immoneuf")
                    div(class="flex center")
                        h1 ImmoNeuf Admin 
        block main 
            main
                div(id="menu") 
                    a(href="/admin75" class="flex spaceAround")  
                        i.fa-solid.fa-house
                        h3 Dashboard
                    ul
                        li
                            a(href="/admin75/users" class="flex spaceAround") 
                                i.fa-solid.fa-user
                                div Utilisateurs
                        li
                            a(href="/admin75/realties" class="flex spaceAround") 
                                i.fa-solid.fa-house-chimney-user 
                                div Biens immobiliers
                        li
                            a(href="") 
                        li
                            a(href="") 
                        li
                            a(href="") 
      
            .container
                - var messages = getMessages()
                if messages.notify
                    each msg in messages.notify
                        .alert.alert-info= msg
                if messages.error
                    each msg in messages.error
                        .alert.alert-danger= msg
                        
                block content
        block footer
        script(src=process.env.BROWSER_REFRESH_URL)
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")