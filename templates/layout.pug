doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title ImmoNeuf

        block stylesheet
        link(rel="stylesheet", href="assets/css/normalize.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        link(rel="stylesheet", href="/assets/css/style.css")
    body 
        block header  
            header 
                nav(class="flex spaceBetween") 
                    a(href="/" id="logo") 
                        img(src="/assets/img/logo.png", alt="logo immoneuf")
                    ul(class="flex spaceAround") 
                        li
                            a(href="/") Accueil
                        li
                            if session.user
                                a(href="/register") Mon compte
                            else
                                a(href="/register") Inscription
                        li
                            if session.user
                                a(href="/logout") DÃ©connexion
                            else 
                                a(href="/authentication") Connexion
                        li
                            a(href="#") Nous contacter  
        
        block main 
            main 
                div(class="titre")
                    h1 Immoneuf 
                .container
                    - var messages = getMessages()
                    if messages.notify
                        each msg in messages.notify
                            .alert.alert-info= msg
                    if messages.error
                        each msg in messages.error
                            .alert.alert-danger= msg 
        block footer
        script(src=process.env.BROWSER_REFRESH_URL)
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")
